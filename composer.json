{
    "name": "oitmain/yii2-gcloud-helpers",
    "type": "library",
    "description": "",
    "keywords": [
        "oitmain",
        "yii2-gcloud-helpers"
    ],
    "homepage": "https://github.com/oitmain/yii2-gcloud-helpers",
    "authors": [
        {
            "name": "Oitmain, Inc",
            "email": "support@oitmain.com",
            "homepage": "http://oitmain.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.4|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Oitmain\\Yii2\\Google\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oitmain\\Yii2\\Google\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-verbose": "phpunit --verbose",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf --no-patch --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
